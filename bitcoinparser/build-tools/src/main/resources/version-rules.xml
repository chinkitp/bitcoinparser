<?xml version="1.0" encoding="UTF-8"?>
<ruleset
    comparisonMethod="maven"
    xmlns="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://mojo.codehaus.org/versions-maven-plugin/rule/2.0.0 http://mojo.codehaus.org/versions-maven-plugin/xsd/rule-2.0.0.xsd"
>
    <ignoreVersions>
        <ignoreVersion type="regex">(?i).*[-_\.]rc[0-9\.-]*.*</ignoreVersion>
        <ignoreVersion type="regex">(?i).*[-_\.]beta[0-9\.-]*.*</ignoreVersion>
        <ignoreVersion type="regex">(?i).*[-_\.]alpha[0-9\.-]*.*</ignoreVersion>
        <ignoreVersion type="regex">(?i).*[-_\.]jre[5-7][\.-]*.*</ignoreVersion>
        <ignoreVersion type="regex">(?i).*[-_\.]snap(shot)?[0-9\.-]*.*</ignoreVersion>
        <ignoreVersion type="regex">(?i).*[-_\.]m[0-9\.-]*.*</ignoreVersion>
    </ignoreVersions>

    <rules>
        <rule groupId="org.scala-lang">
            <ignoreVersions>
                <!-- spark only supports 2.11 -->
                <ignoreVersion type="regex">2.1[23].[0-9]+</ignoreVersion>
            </ignoreVersions>
        </rule>
    </rules>
</ruleset>
